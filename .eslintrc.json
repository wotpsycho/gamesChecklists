{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "indent": [
            "error",
            2, {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": "error",
        "prefer-const": "error"
    },
    "globals": {
        "SpreadsheetApp": false,
        "ScriptApp": false,
        "Logger": false,

        "ChecklistApp": false,
        "StatusTranspiler": false,

        "FORMULA": false,
        "META": false,
        "SETTINGS": false,

        "time": false,
        "timeEnd": false
    }
}
